<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.slapshotapps.dragonshockey.activities.MainActivity"
        android:label="MainActivity"/>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.slapshotapps.dragonshockey.activities.home.HomeFragment"
        android:label="activity_home"
        tools:layout="@layout/activity_home"/>
    <fragment
        android:id="@+id/rosterFragment"
        android:name="com.slapshotapps.dragonshockey.activities.roster.RosterFragment"
        android:label="activity_roster"
        tools:layout="@layout/activity_roster"/>
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.slapshotapps.dragonshockey.activities.schedule.ScheduleFragment"
        android:label="activity_schedule"
        tools:layout="@layout/activity_schedule"/>
    <fragment
        android:id="@+id/statsFragment"
        android:name="com.slapshotapps.dragonshockey.activities.stats.StatsFragment"
        android:label="activity_stats"
        tools:layout="@layout/activity_stats">
        <action
            android:id="@+id/action_statsFragment_to_careerStatsFragment"
            app:destination="@id/careerStatsFragment"/>
    </fragment>
    <fragment
        android:id="@+id/careerStatsFragment"
        android:name="com.slapshotapps.dragonshockey.activities.careerStats.CareerStatsFragment"
        android:label="fragment_career_stats"
        tools:layout="@layout/fragment_career_stats">
        <argument
            android:name="CurrentSeasonStats"
            app:argType="com.slapshotapps.dragonshockey.models.PlayerStats"/>
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.slapshotapps.dragonshockey.activities.settings.SettingsFragment"
        android:label="SettingsFragment"/>
</navigation>