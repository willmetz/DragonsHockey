<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/content_game_details"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="80dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/game_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Small"
        tools:text="Wed Jan 10"
        app:layout_constraintTop_toTopOf="@+id/content_game_details"
        app:layout_constraintLeft_toLeftOf="@+id/content_game_details"
        />

    <TextView
        android:id="@+id/game_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Small"
        tools:text="7:30 PM"
        app:layout_constraintTop_toBottomOf="@+id/game_day"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/game_day"
        app:layout_constraintRight_toRightOf="@+id/game_day"
        />


    <TextView
        android:id="@+id/versus_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vrs"
        app:layout_constraintLeft_toLeftOf="@+id/opponent"
        app:layout_constraintRight_toRightOf="@+id/opponent"
        app:layout_constraintTop_toTopOf="@+id/content_game_details"/>

    <TextView
        android:id="@+id/opponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Flying Ninjas"
        style="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintLeft_toLeftOf="@+id/content_game_details"
        app:layout_constraintRight_toRightOf="@+id/content_game_details"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintTop_toBottomOf="@+id/versus_label"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/game_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="14-7 (L)"
        style="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintRight_toRightOf="@+id/content_game_details"
        app:layout_constraintTop_toBottomOf="@+id/versus_label"
        app:layout_constraintBottom_toTopOf="@+id/opponent"
        android:layout_marginTop="4dp"/>


</android.support.constraint.ConstraintLayout>