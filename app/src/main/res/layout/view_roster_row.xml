<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:id="@+id/roster_row">

    <TextView
        android:id="@+id/player_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toLeftOf="@id/roster_row"
        app:layout_constraintTop_toTopOf="@id/roster_row"
        app:layout_constraintBottom_toBottomOf="@id/roster_row"
        tools:text="56"/>

    <TextView
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toTopOf="@id/roster_row"
        app:layout_constraintBottom_toBottomOf="@id/roster_row"
        app:layout_constraintLeft_toRightOf="@id/player_number"
        android:layout_marginLeft="16dp"
        tools:text="Will Metz"/>

    <TextView
        android:id="@+id/player_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toTopOf="@id/roster_row"
        app:layout_constraintBottom_toBottomOf="@id/roster_row"
        app:layout_constraintRight_toLeftOf="@+id/player_shot"
        android:layout_marginRight="16dp"
        tools:text="Forward"
        />

    <TextView
        android:id="@+id/player_shot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toTopOf="@id/roster_row"
        app:layout_constraintBottom_toBottomOf="@id/roster_row"
        app:layout_constraintRight_toRightOf="@id/roster_row"
        tools:text="L"
        />

</android.support.constraint.ConstraintLayout>