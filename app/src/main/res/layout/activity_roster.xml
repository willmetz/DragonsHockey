<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/roster_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/toolbar_container"
        app:layout_constraintTop_toTopOf="@id/roster_parent"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:title="@string/app_name"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/roster_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_container"
        app:layout_constraintBottom_toTopOf="@+id/ir_background_color"
        android:layout_marginBottom="8dp"
        />

    <View
        android:id="@+id/ir_background_color"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/lightRed"
        app:layout_constraintBottom_toBottomOf="@id/roster_parent"
        app:layout_constraintRight_toLeftOf="@+id/ir_background_text"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="12dp"
        />

    <TextView
        android:id="@+id/ir_background_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Injured Reserve"
        app:layout_constraintLeft_toRightOf="@id/roster_parent"
        app:layout_constraintRight_toLeftOf="@id/roster_parent"
        app:layout_constraintHorizontal_bias=".45"
        app:layout_constraintBottom_toBottomOf="@id/ir_background_color"
        />

</android.support.constraint.ConstraintLayout>