<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.slapshotapps.dragonshockey">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.home.HomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.schedule.ScheduleActivity"
            android:label="@string/schedule_title"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.roster.RosterActivity"
            android:label="@string/roster_title"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.stats.StatsActivity"
            android:label="@string/stats_title"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.admin.AdminAuthActivity"
            android:label="@string/auth_title"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.admin.AdminActivity"
            android:label="@string/title_activity_admin"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.admin.EditGameAuthActivity"
            android:label="@string/title_activity_edit_game_auth"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.EditStatsAuthActivity"
            android:label="@string/title_activity_edit_stats_auth"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>